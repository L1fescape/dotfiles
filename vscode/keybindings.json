// Place your key bindings in this file to override the defaults
[
    { "key": "cmd+t", "when": "editorFocus", "command": "workbench.action.files.newUntitledFile" },
    { "key": "ctrl+t", "when": "editorFocus", "command": "workbench.action.files.newUntitledFile" },
    { "key": "cmd+t", "when": "terminalFocus", "command": "workbench.action.terminal.newWithCwd" },
    { "key": "ctrl+t", "when": "terminalFocus", "command": "workbench.action.terminal.newWithCwd" },

    { "key": "cmd+n", "when": "editorFocus", "command": "workbench.action.files.newUntitledFile" },
    { "key": "ctrl+n", "when": "editorFocus", "command": "workbench.action.files.newUntitledFile" },
    { "key": "cmd+n", "when": "terminalFocus", "command": "workbench.action.terminal.newWithCwd" },
    { "key": "ctrl+n", "when": "terminalFocus", "command": "workbench.action.terminal.newWithCwd" },

    { "key": "cmd+[", "when": "editorFocus", "command": "workbench.action.navigateBack" },
    { "key": "ctrl+[", "when": "editorFocus", "command": "workbench.action.navigateBack" },

    { "key": "cmd+]", "when": "editorFocus", "command": "workbench.action.navigateForward" },
    { "key": "ctrl+]", "when": "editorFocus", "command": "workbench.action.navigateForward" },

    { "key": "cmd+l", "when": "editorFocus", "command": "workbench.action.nextEditor" },
    { "key": "ctrl+l", "when": "editorFocus", "command": "workbench.action.nextEditor" },
    { "key": "cmd+l", "when": "terminalFocus", "command": "workbench.action.terminal.focusNext" },
    { "key": "ctrl+l", "when": "terminalFocus", "command": "workbench.action.terminal.focusNext" },

    { "key": "cmd+h", "when": "editorFocus", "command": "workbench.action.previousEditor" },
    { "key": "ctrl+h", "when": "editorFocus", "command": "workbench.action.previousEditor" },
    { "key": "cmd+h", "when": "terminalFocus", "command": "workbench.action.terminal.focusPrevious" },
    { "key": "ctrl+h", "when": "terminalFocus", "command": "workbench.action.terminal.focusPrevious" },

    { "key": "cmd+w", "when": "terminalFocus", "command": "workbench.action.terminal.kill" },
    { "key": "ctrl+w", "when": "terminalFocus", "command": "workbench.action.terminal.kill" },

    {
      "key": "ctrl+f",
      "command": "-extension.vim_ctrl+f",
      "when": "editorTextFocus && vim.active && vim.use<C-f> && !inDebugRepl && vim.mode != 'Insert'"
    }
  ]
